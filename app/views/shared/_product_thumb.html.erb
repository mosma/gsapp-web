<div class="col-sm-6 col-md-4">
  <%= link_to product_path(product.garage, product) do %>
  <div class="thumbnail">
    <%= image_tag product.image %>
    <div class="caption">
      <h1><span class="label label-success"><%=  show_value product %></span></h1>
      <h3><%= truncate(product.name, length: 20) %></h3>
      <p><%= truncate(product.description, length: 20) %></p>
    </div>
  </div>
  <% end %>
</div>